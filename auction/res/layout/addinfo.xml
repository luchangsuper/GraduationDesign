<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bj6"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_edname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品名称"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品描述："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_eddesc"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品描述"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品起始价 ："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_edprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品起始价"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品状态："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_edstatus"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品状态"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品数量："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_ednumber"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品数量"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品上货时间 ："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_edtime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品上货时间"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/add_ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍卖者昵称 ："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/add_edID"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入拍卖者昵称"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/btn_add"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:text="发布" >
        </Button>

        <Button
            android:id="@+id/btn_addCancel"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_marginLeft="30dip"
            android:text="取消" >
        </Button>
    </LinearLayout>

</LinearLayout>