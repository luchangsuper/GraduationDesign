<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tu9"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_goodsno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品编号："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/time_edgoodsno"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品编号"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_goodsname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名称："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/time_edgoodsname"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品名称"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_goods_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品上货时间："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/time_edgoods_start"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入商品上货时间"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/time_goods_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="拍卖截止时间："
            android:textSize="18sp" >
        </TextView>

        <EditText
            android:id="@+id/time_edgoods_end"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="请输入拍卖截止时间"
            android:textSize="18sp" >
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingTop="15dp" >

        <Button
            android:id="@+id/btn_addtime"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:text="发布" >
        </Button>

        <Button
            android:id="@+id/btn_addtimeCancel"
            android:layout_width="80dip"
            android:layout_height="40dip"
            android:layout_marginLeft="30dip"
            android:text="取消" >
        </Button>
    </LinearLayout>

</LinearLayout>